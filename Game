#include <iostream>
#include <conio.h>
#include <windows.h>
#include <cmath>
#include <iomanip>

using namespace std;

bool gOver;
const int width = 40;
const int height = 20;
int x, y;
int coinX, coinY; 
int points= 0 ; 
bool coin =0; 
enum eDirecton { STOP = 1, LEFT, RIGHT, UP, DOWN };
eDirecton dir;

void Setup() /*Values and Positions of entities*/
{
    gOver = false;
    dir = STOP;

    x = (width / 2) - 1;
    y = height - 1;

    coinX =26; 
    coinY = height -2 ;
}

void Draw()/*Drawing the map and the Charachter and also the entities*/
{
    system("cls");

    cout << "C0NTROLS:"<< endl <<"BY PUSHING" << endl << "W - JUMP" << endl << "A - LEFT" << endl<<"D - RIGHT "<<endl;
    for (int i = 0; i < width + 2; i++)
        cout << "#";
    cout << endl;

    for (int i = 0; i < height; i++)
    {
        for (int j = 0; j < width; j++)
        {
            if (j == 0)
            {
                cout << "#";
            }
            if (i == y && j == x)
            {
                cout << "O";
            }
            else if (i == coinY && j == coinX && coin == 0)
            {
                cout << "C";
            }
            else
            {
                cout << " ";
            }

            if (j == width - 1)
            {
                cout << "#";
            }
        }
        cout << endl;
    }
    for (int i = 0; i < width + 2; i++)
    {
        cout << "#";
    }
    cout << endl;

    cout << "P0INTS: " << points;

    if (x >= width)
    {
        x = width - 1;
    }
    else if (x < 0)
    {
        x = 0;
    }
    if (y >= height)
    {
        y = height - 1;
    }
    else if (y < 0)
    {
        y = 0;
    }

}
void Input()
{
    if (_kbhit())
    {
        switch (_getch())
        {
        case 'a':
            dir = LEFT;

            break;
        case 'd':
            dir = RIGHT;

            break;
        case 'w':
            dir = UP;

            break;
        case 'x':
            gOver = true;
            break;
        }
    }

    switch (dir)
    {
    case LEFT:
    {
        x--;
        dir = STOP;
        break;
    }
    case RIGHT:
    {
        x++;
        dir = STOP;
        break;
    }
    case UP:
    {
        y--; 
        dir = STOP;
        dir = DOWN; 
        break; 
    }
    case DOWN: 
    {
        y++;
        dir = STOP;
        break;
    }
    }
}
void coinObt() /*Coin Obtainted*/
{
    if (x == coinX && y == coinY)
    {
        coin = 1;
        
    }
    if (coin == 1)
    {
        cout << " ";
        points =1; 
    }
    
    
    
}
void GameO()/*Game Over*/
{
    if (gOver == true)
    {
        system("cls");
        cout << setw(50) << "GAME OVER";
    }
}
int main()
{
    Setup();
    while (gOver == false)
    {

        Draw();
        Input();
        coinObt(); 
        GameO();
    }
    return 0;
}
