#include <iostream>
#include <conio.h>
#include <windows.h>
#include <cmath>
#include <iomanip>
#include <fstream>
#include<string>
using namespace std;

string line;
ifstream myfile("File.txt");
bool gOver;
const int width = 40;
const int height = 20;
int x, y;
int coinX, coinY;
int shotX, shotY;
int shot2Y, shot2X;
int shot3Y, shot3X;
int points = 0;
bool coin = 0;
bool loop = 0, loop1 = 0, loop2=0;
int cloc = 0;
enum eDirecton { STOP = 1, LEFT, RIGHT, UP, DOWN };

eDirecton dir;


void Setup() /*Values and Positions of entities*/
{
    gOver = false;
    dir = STOP;

    x = (width / 2) - 1;
    y = height - 1;

    coinX = 26;
    coinY = height - 2;

    shotX = 24;
    shotY = 0;

    shot2Y = 0;
    shot2X = 27;

    shot3Y = height - 1; 
    shot3X=width -1;

}

void Draw()/*Drawing the map and the Charachter and also the entities*/
{
    system("cls");

    cout << "C0NTROLS:" << endl << "W - JUMP" << endl << "A - LEFT" << endl << "D - RIGHT " << endl;
    for (int i = 0; i < width + 2; i++)
        cout << "#";
    cout << endl;

    for (int i = 0; i < height; i++)
    {
        for (int j = 0; j < width; j++)
        {
            if (j == 0)
            {
                cout << "#";
            }
            if (i == y && j == x)
            {
                cout << "O";
            }
            else if (i == coinY && j == coinX && coin == 0)
            {
                cout << "C";
            }
            else if (i == shotY && j == shotX)
            {
                cout << "!";
            }
            else if (i == shot2Y && j == shot2X && cloc >= 30)
            {
                cout << "!";
            }
            else if (i == shot3Y && j == shot3X && cloc >= 35)
            {
                cout << "!";
            }
            else
            {
                cout << " ";
            }

            if (j == width - 1)
            {
                cout << "#";
            }
        }
        cout << endl;
    }
    for (int i = 0; i < width + 2; i++)
    {
        cout << "#";
    }
    cout << endl;

    cout << "P0INTS: " << points << endl;

    cout << "T1ME: " << cloc;

    if (x >= width)
    {
        x = width - 1;
    }
    else if (x < 0)
    {
        x = 0;
    }
    if (y >= height)
    {
        y = height - 1;
    }
    else if (y < 0)
    {
        y = 0;
    }

}
void Input()
{
    if (_kbhit())
    {
        switch (_getch())
        {
        case 'a':
        {
            dir = LEFT;
            break; }
        case 'd':
        {
            dir = RIGHT;
            break;
        }
        case 'w':
        {
            dir = UP;
            break;
        }
        case 'x':
        {
            gOver = true;
            break;
        }
        }
    }

    switch (dir)
    {
    case LEFT:
    {
        x--;
        dir = STOP;
        break;
    }
    case RIGHT:
    {
        x++;
        dir = STOP;
        break;
    }
    case UP:
    {
        
        y--;
        dir = STOP;
        dir = DOWN;
        break;
    }
    case DOWN:
    {
        y++;
        y++;
        dir = STOP;
        break;
    }
    }
}
void coinObt() /*Coin Obtainted*/
{
    if (x == coinX && y == coinY)
    {
        coin = 1;

    }
    if (coin == 1)
    {
        cout << " ";
        points = 1;
    }



}


void Shot()
{
    if (loop == 0)
    {
        shotY++;

    }
    if (cloc == 30)
    {
        loop = 1;
    }
    if (loop == 1)
    {

        shot2Y++;
    }
    if (cloc == 35)
    {
        loop2 = 1;
    }
    if( loop2==1 )
    {
        shot3X--;
    }
}

void CL0()
{
    if (loop1 == 0)
    {

        cloc++;
    }

}
void Death()
{
    if (x == shotX && y == shotY)
    {
        cout << " ";
        gOver = true;
    }
    if (x == shot2X && y == shot2Y)
    {
        cout << " ";
        gOver = true;
    }
    if (x == shot3X && y == shot3Y)
    {
        cout << " ";
        gOver = true;
    }
}

void GameO()/*Game Over*/
{
    if (gOver == true)
    {
        system("cls");
        string line;
        ifstream myfile("File.txt");
        if (myfile.is_open())
        {
            while (getline(myfile, line))
            {
                cout << line << '\n';
            }
            myfile.close();
        }
        else
        {
            cout << "Unable to open file";
        }
        cout << "F1NAL SC0RE: " << points;
    }



}
int main()
{
    Setup();
    while (gOver == false)
    {

        Draw();
        Input();
        coinObt();
        Shot();
        CL0();
        Death();
        GameO();
    }
    return 0;
}

